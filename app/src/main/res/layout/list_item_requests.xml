<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="10dp">

    <TextView
        android:id="@+id/request_item_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Vacation - 02/01/2002 -> 09/01/2002" />

    <TextView
        android:id="@+id/request_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/teal_700"
        app:layout_constraintStart_toStartOf="@+id/request_item_details"
        app:layout_constraintTop_toBottomOf="@+id/request_item_details"
        tools:text="Approved - 25/12/2001" />

</androidx.constraintlayout.widget.ConstraintLayout>